<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultActivity">
    
    <TextView
        android:textColor="@color/purple_700"
        android:layout_marginTop="16dp"
        android:text="Seu IMC é:"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/rosa"
        android:id="@+id/textview_result"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="wrap_content"
        tools:text="27.104"
        android:textAlignment="center"
        android:textSize="38sp" />

    <TextView
        android:textColor="@color/purple_200"
        android:id="@+id/textview_classificacao"
        android:layout_margin="8dp"
        tools:text="Classificação : Normal"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_margin="18dp"
        android:textColor="@color/purple_500"
        android:text="VEJA A BAIXO A TABELA"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/laranja"
        android:layout_margin="16dp"
        android:textAlignment="center"
        android:text="MENOR QUE 18,5 ABAIXO DO PESO "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:textColor="@color/verde_agua"
        android:layout_margin="16dp"
        android:textAlignment="center"
        android:text="ENTRE 18,5 E 24,9 NORMAL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/roxo_1"
        android:layout_margin="16dp"
        android:textAlignment="center"
        android:text="ENTRE 25,0 E 29,9 SOBREPESO I"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/rosa_1"
        android:layout_margin="16dp"
        android:textAlignment="center"
        android:text="ENTRE 30,0 E 39,9 OBESIDADE II"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/verde_1"
        android:layout_margin="16dp"
        android:text="MAIOR QUE 40,0 OBESIDADE GRAVE III"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

